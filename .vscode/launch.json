{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://sample/phpSearch.html",
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000

        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "index.php",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}